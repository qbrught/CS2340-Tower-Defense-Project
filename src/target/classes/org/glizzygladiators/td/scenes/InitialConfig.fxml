<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:id="myStackPane"
           fx:controller="org.glizzygladiators.td.controllers.InitialConfig"
           prefHeight="750" prefWidth="1250">
    <VBox alignment="CENTER" spacing="20">
        <HBox alignment="CENTER" spacing="25">
            <Label text="Enter your name:" style="-fx-font-size: 20; -fx-font-weight: bold;" />
            <TextField fx:id="playerName" />
        </HBox>
        <HBox alignment="CENTER" spacing="15">
            <Label text="Select your difficulty:" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
            <Button text="Easy" onMouseClicked="#setDifficulty"/>
            <Button text="Medium" onMouseClicked="#setDifficulty"/>
            <Button text="Hard" onMouseClicked="#setDifficulty"/>
        </HBox>
        <HBox alignment="CENTER" spacing="20">
            <Button text="Back" onMouseClicked="#backButtonClicked"/>
            <Button text="Continue" onMouseClicked="#finishInit"/>
        </HBox>
    </VBox>
</StackPane>
